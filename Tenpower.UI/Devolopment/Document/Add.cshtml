@inherits Azeroth.Klz.ViewPageCSHtml
@{
    this.Title = "新随笔";
    this.Layout = "/Layout/LayoutContainer.cshtml";
    Tenpower.Model.DevDoc doc = (Tenpower.Model.DevDoc)ViewData["doc"];
}
@section style{
    <style>
        .txt-blog-content {
            width: 100%;
            height: 520px;
        }

        object {
            position: fixed;
        }

        .bootstrap-component {
            background: transparent url(/Assets/img/setup.png) no-repeat 20px 20px;
            background-position: 1px 1px;
        }

        .row {
            margin: 0px;
        }

        pre {
            padding: 0px;
            border: 0px;
            border-bottom: 0px;
            border-radius: 0px 0px;
            font-size: 12px;
            display: normal;
            background-color: #fff;
        }

        .sidebar-right {
            position: absolute;
            left: 100%;
            top: 20px;
            min-height: 200px;
            min-width: 120px;
            /*border:1px solid red;*/
        }
    </style>
}

<object class="test-form" id="clipboardHelper" classid="clsid:CEB145DD-D2CF-49A3-9560-02EC54A29F11"></object>
<div class="row">
    <div class="col-md-12">
        <form method="post" action="Save">
            <input type="hidden" name="Id" value="@(doc.Id)" />
            <div class="form-group">
                <input name="Title" type="text" class="form-control" id="txt-blog-title" placeholder="请输入主题" value="@(doc.Title)">
            </div>
            <script type="text/plain" id="editor" style="min-height:600px"></script>
            <div class="sidebar-right">
                <button type="submit" class="btn btn-default" style="margin-top: 10px">确定</button>
            </div>
        </form>
    </div>
</div>


@section script{
    <script src="/Assets/ueditor1_4_3_3-utf8-net/ueditor.config.js"></script>
    <script src="/Assets/ueditor1_4_3_3-utf8-net/ueditor.all.js"></script>
    <script src="/Assets/ueditor1_4_3_3-src/lang/zh-cn/zh-cn.js"></script>
    <script type="text/javascript">
        $(function () {

            var ue = UE.getEditor('editor', {
                serverUrl: '/server/ueditor/controller.php'
            });
        });
    </script>
}


